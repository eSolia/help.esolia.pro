{
  "scripts": {
    "fmt": {
      "desc": "Formats code",
      "cmd": "deno fmt -c deno.json"
    },
    "lint": {
      "desc": "Lints code",
      "cmd": "deno lint -c deno.json"
    },
    "pre-commit": {
      "cmd": [
        "vr fmt",
        "vr lint"
      ],
      "gitHook": "pre-commit"
    }
  }
}
