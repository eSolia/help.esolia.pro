<html lang="{{ it.lang || "en" }}">
<!-- ===== MAIN TEMPLATE START ===== -->
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>{{ it.title || it.basename }}</title>

    <meta name="supported-color-schemes" content="light dark">
    <meta name="theme-color" content="hsl(220, 20%, 100%)" media="(prefers-color-scheme: light)">
    <meta name="theme-color" content="hsl(220, 20%, 10%)" media="(prefers-color-scheme: dark)">
    
    <link rel="stylesheet" href="/styles.css?cb={{ cacheBuster }}">
    <script type="module" src="/menu.js"></script>
    <link rel="canonical" href="{{ url |> url(true) }}">
    {{ it.extra_head?.join("\n") }}
  </head>

  <body>
    <div class="container">
      <div class="toolbar">
        <div id="search" class="search"></div>
        <script>
          let theme = localStorage.getItem("theme") || (window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light");
          document.documentElement.dataset.theme = theme;
          function changeTheme() {
            theme = theme === "dark" ? "light" : "dark";
            localStorage.setItem("theme", theme);
            document.documentElement.dataset.theme = theme;
          }
        </script>
        <button class="button theme" onclick="changeTheme()">
          <span class="icon">◐</span>
        </button>
      </div>

      {{ include "templates/menu.vto" }}

       {{ if toc?.length }}
      <nav class="toc">
        <h2>{{ site.tocheader }}</h2>
        <ol>
          {{ for item of toc }}
          <li>
            <a href="#{{ item.slug }}">{{ item.text }}</a>

            {{ if item.children.length }}
            <ul>
              {{ for child of item.children }}
              <li>
                <a href="#{{ child.slug }}">{{ child.text }}</a>
              </li>
              {{ /for }}
            </ul>
            {{ /if }}
          </li>
          {{ /for }}
        </ol>
      </nav>
      {{ /if }}

      <main class="main">
        {{ include "templates/breadcrumb.vto" }}
        <article>
          <div class="body" {{ if it.content && it.pagefind }}data-pagefind-body{{ /if }}>
            {{ if !it.title }}
              <h1>{{ it.basename }}</h1>
            {{ /if }}

            {{ if content }}
              {{ content }}
            {{ else }}
              <p class="emptyState">The page <code>{{ url }}</code> is empty</p>
            {{ /if }}
          </div>
        </article>
        {{ if it.footnotes?.length }}
        <aside role="note" class="footnotes">
          <dl>
            {{ for note of footnotes }}
            <div id={{ note.id }} class="footnote">
              <dt><a href="#{{ note.refId }}">{{ note.label }}</a></dt>
              <dd>{{ note.content }}</dd>
            </div>
            {{ /for }}
          </dl>
        </aside>
        {{ /if }}
      </main>

      {{ if footer }}
      <footer class="body-footer">
        <time timestamp="{{ date |> date("DATETIME") }}">{{ site.lastup }}: {{ date |> date("HUMAN_DATETIME", [lang]) }}</time>
        {{ if it.edit != false && repo }}
          &nbsp;—&nbsp;
          <a href="{{ repo.url }}/edit/main{{ repo.path }}{{ page.src.path }}{{ page.src.ext }}">{{ site.editme }}</a>
        {{ /if }}
      </footer>
      {{ /if }}
    </div>
  </body>
<!-- ===== MAIN TEMPLATE END ===== -->
{{> console.log(it) }}
</html>
